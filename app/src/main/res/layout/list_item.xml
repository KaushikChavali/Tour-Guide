<?xml version="1.0" encoding="utf-8"?>
<com.example.admin.tourguide.RoundedCornerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/list_style"
        android:minHeight="@dimen/text_margin">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ahmedabad" />

        <TextView
            android:id="@+id/spot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Sabarmati Ashram" />

        <TextView
            android:id="@+id/spot_desc"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/spot_name"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:textColor="@android:color/white"
            tools:text="Lorem ipsum dolor sit amet" />

    </RelativeLayout>

</com.example.admin.tourguide.RoundedCornerLayout>
